<h1>Tags</h1>

<table class="table">
  <thead>
    <tr>
      <th>TAG</th>
      <th>POSTS TAGGED</th>
      <th>ACTION</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <th>
          <%= tag.tag_content %>
        </th>
        <th>
          <%= tag.posts.count %>
        </th>
        <th>
          <%= link_to 'Edit', edit_post_tag_path(tag.first_post, tag) %>
          <%= link_to 'Delete',[tag.first_post,tag], method: :delete, data: { confirm: 'are you sure?' } %>
        </th>
      </tr>
    <% end %>
  </tbody>
</table>



