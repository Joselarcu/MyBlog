<h1>All Comments</h1>

<% @comments.each do |comment| %>

  <%=link_to comment.content, comment_path(comment) %> 
  <% if logged_in? && is_comment_owner?(comment, current_user) %>
  <%= link_to 'Edit', edit_comment_path(comment) %>
  <%= link_to 'Delete', comment, method: :delete, data: { confirm: 'are you sure?' }, remote: true %>
  <% end %>
  <br>
<% end %>

<%= link_to 'Add Comment', new_comment_path %>