<!-- Modal -->
<div class="modal fade" id="modalLogin" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only"><%= t('button.close') %></span></button>
        <h4 class="modal-title" id="myModalLabel"><%= t('session.login') %></h4>
      </div>
      <div class="modal-body">
        <%= form_tag sessions_path, :class => "form-horizontal", :role => 'form' do %>

          <div class="form-group">
            <%= label_tag t('session.username'),nil, class: "control-label col-md-2" %>
            <div class="col-md-4">
              <%= text_field_tag :username, params[:username] %>
            </div>
          </div>

          <div class="form-group">
            <%= label_tag t('session.password'),nil, class: "control-label col-md-2" %>
            <div class="col-md-4">
              <%= password_field_tag :password %>
            </div>
          </div>

          <div class="form-group">    
            <div class="col-sm-offset-2 col-sm-10">
              <%= check_box_tag :remember_me, 1, params[:remember_me] %>
              <%= label_tag t('session.remember_me') %>
            </div>
          </div>
          <div class="form-group">        
            <div class="col-sm-offset-2 col-sm-10">
              <div class="actions"><%= submit_tag t('button.login'), class: "btn btn-large btn-primary" %></div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>