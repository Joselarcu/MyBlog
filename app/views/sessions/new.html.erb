<%= form_tag sessions_path, method: :post, :class => "form-horizontal", :role => 'form' do %>


  <div class="form-group">
    <%= label_tag t('session.username'), nil,  class: 'control-label col-md-2' %>
    <div class="col-md-4">
      <%= text_field_tag :username, params[:username], id:"username_field", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag t('session.password'), nil, class: "control-label col-md-2" %>
    <div class="col-md-4">
      <%= password_field_tag :password, params[:password], id: "password_field", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">    
    <div class="col-sm-offset-2 col-sm-10">
      <%= check_box_tag :remember_me, 1, params[:remember_me] %>
      <%= label_tag t('session.remember_me') %>
    </div>
  </div>

  <div class="form-group">        
    <div class="col-sm-offset-2 col-sm-10">
      <div class="actions"><%= submit_tag t('button.login'), class: "btn btn-large btn-primary" %>
      </div>
    </div>
  </div>


<% end %>

